<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />*@
    <link href="~/Content/css/styles.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.bootstrap.min.js"></script>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/favicon.ico" type="image/ico" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="background"></div>
    <div class="main-holder">
        <header class="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="logo float-left">
                                    <a class="logo-href" href="/" title="Babydiary">BabyDiary</a>
                                </div>
                            </div>
                            @{ Html.RenderPartial("~/Views/Shared/_LoginBlock.cshtml"); }
                        </div>
                        <div class="row">
                            @{ Html.RenderPartial("~/Views/Shared/_Menu.cshtml"); }
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                @RenderSection("breadcrumb")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="content-holder">
            <div class="container">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
        @{ Html.RenderPartial("~/Views/Shared/_Footer.cshtml"); }
    </div>
</body>
</html>
